# NyayMitra Environment Configuration
# Copy this file to .env and fill in your values

# Required: Your Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Model Configuration
GEMINI_MODEL=gemini-1.5-pro

# Enhanced Rate Limiting Configuration
# Very conservative settings to prevent rate limits
MAX_REQUESTS_PER_MINUTE=6
SLEEP_BETWEEN_REQUESTS=12
MIN_DELAY_BETWEEN_REQUESTS=8.0

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAILURES=2
CIRCUIT_BREAKER_TIMEOUT=300

# Batch Processing Configuration
BATCH_PROCESSING_SLEEP=15
INTER_BATCH_SLEEP=20
MAX_BATCH_SIZE=3
MAX_TOKENS_PER_BATCH=12000

# Retry Configuration
MAX_RETRIES=5

# Advanced Features
ENABLE_AGGRESSIVE_RATE_LIMITING=True

# Application Settings
DEBUG=False
HOST=0.0.0.0
PORT=5000
