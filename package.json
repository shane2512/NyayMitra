{
  "name": "nyaymitra-serverless",
  "version": "2.0.0",
  "description": "NyayMitra - AI-Powered Contract Analysis Platform (Serverless)",
  "main": "api/index.py",
  "scripts": {
    "dev": "vercel dev",
    "build": "vercel build",
    "deploy": "vercel --prod",
    "deploy-preview": "vercel",
    "test": "python -m pytest tests/",
    "lint": "flake8 api/",
    "format": "black api/",
    "install-deps": "pip install -r api/requirements.txt"
  },
  "keywords": [
    "legal-tech",
    "contract-analysis",
    "ai",
    "serverless",
    "vercel",
    "gemini",
    "nlp"
  ],
  "author": "NyayMitra Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nyaymitra.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  },
  "devDependencies": {
    "vercel": "^32.0.0"
  },
  "vercel": {
    "functions": {
      "api/*.py": {
        "runtime": "python3.9"
      }
    }
  }
}
